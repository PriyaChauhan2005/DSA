#include <limits.h> 

int reverse(int x) {
    int revNum = 0;
    
    while (x != 0) {
        int last = x % 10;
        
        
        if (revNum > INT_MAX / 10 || (revNum == INT_MAX / 10 && last > 7)) return 0;
        if (revNum < INT_MIN / 10 || (revNum == INT_MIN / 10 && last < -8)) return 0;

        revNum = revNum * 10 + last; 
        x = x / 10; 
    }
    
    return revNum;
}
